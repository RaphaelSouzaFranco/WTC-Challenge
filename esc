[32m+[m[32m@OptIn(ExperimentalMaterial3Api::class)[m
[32m+[m[32m@Composable[m
[32m+[m[32mfun ClientListScreen() {[m
[32m+[m[32m    // ESTADO 1: Para a barra de busca[m
[32m+[m[32m    var textoBusca by remember { mutableStateOf(TextFieldValue("")) }[m
[32m+[m
[32m+[m[32m    // ESTADO 2: Vari√°veis de navega√ß√£o (CORRE√á√ÉO DE ESCOPO)[m
[32m+[m[32m    val navController: NavController = rememberNavController() // Para o Preview[m
[32m+[m[32m    val currentRoute: String = Screen.Client.route[m
[32m+[m
[32m+[m[32m    // ESTADO 3: Lista de Clientes (Mut√°vel para futuras adi√ß√µes/exclus√µes)[m
[32m+[m[32m    val clientes = remember {[m
[32m+[m[32m        mutableStateListOf([m
[32m+[m[32m            Cliente(nome = "ACME Corp", numero = "123456", ramo = "Tecnologia"),[m
[32m+[m[32m            Cliente(nome = "Consultoria Alfa", numero = "789012", ramo = "Finan√ßas"),[m
[32m+[m[32m            Cliente(nome = "Log√≠stica R√°pida", numero = "345678", ramo = "Log√≠stica"),[m
[32m+[m[32m            Cliente(nome = "Est√∫dio Criativo", numero = "987654", ramo = "Marketing"),[m
[32m+[m[32m            Cliente(nome = "Sa√∫de Vital", numero = "109876", ramo = "Sa√∫de"),[m
[32m+[m[32m        )[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    // L√ìGICA DE BUSCA E FILTRO[m
[32m+[m[32m    val textoBuscaString = textoBusca.text[m
[32m+[m[32m    val clientesFiltrados = remember(clientes, textoBuscaString) {[m
[32m+[m[32m        if (textoBuscaString.isBlank()) {[m
[32m+[m[32m            clientes[m
[32m+[m[32m        } else {[m
[32m+[m[32m            clientes.filter { cliente ->[m
[32m+[m[32m                cliente.nome.contains(textoBuscaString, ignoreCase = true) ||[m
[32m+[m[32m                        cliente.ramo.contains(textoBuscaString, ignoreCase = true)[m
[32m+[m[32m            }[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    Scaffold([m
[32m+[m[32m        containerColor = (Color(0xFF121417)), // Fundo escuro[m
[32m+[m[32m        topBar = {[m
[32m+[m[32m            CenterAlignedTopAppBar([m
[32m+[m[32m                title = { Text("Lista de Clientes", fontWeight = FontWeight.SemiBold) },[m
[32m+[m[32m                colors = TopAppBarDefaults.topAppBarColors([m
[32m+[m[32m                    containerColor = Color(0xFF121417),[m
[32m+[m[32m                    titleContentColor = Color.White[m
[32m+[m[32m                ),[m
[32m+[m[32m                actions = {[m
[32m+[m[32m                    IconButton(onClick = {}) {[m
[32m+[m[32m                        Icon(Icons.Default.Add, contentDescription = "Adicionar Cliente", tint = Color.White)[m
[32m+[m[32m                    }[m
[32m+[m[32m                }[m
[32m+[m[32m            )[m
[32m+[m[32m        },[m
[32m+[m[32m        bottomBar = {[m
[32m+[m[32m            BottomNavigationBar(navController = navController, currentRoute = currentRoute)[m
[32m+[m[32m        }[m
[32m+[m
[32m+[m[32m    ) { paddingValues ->[m
[32m+[m[32m        Column([m
[32m+[m[32m            modifier = Modifier[m
[32m+[m[32m                .fillMaxWidth()[m
[32m+[m[32m                .padding(paddingValues)[m
[32m+[m[32m                .padding(horizontal = 16.dp)[m
[32m+[m[32m        ) {[m
[32m+[m[32m            Spacer(modifier = Modifier.height(8.dp))[m
[32m+[m
[32m+[m[32m            // BARRA DE BUSCA[m
[32m+[m[32m            TextField([m
[32m+[m[32m                value = textoBusca,[m
[32m+[m[32m                onValueChange = { textoBusca = it },[m
[32m+[m[32m                placeholder = { Text("Buscar cliente", color = Color(0xFF9EABBA)) },[m
[32m+[m[32m                singleLine = true,[m
[32m+[m[32m                colors = TextFieldDefaults.colors([m
[32m+[m[32m                    focusedContainerColor = Color(0xFF293038),[m
[32m+[m[32m                    unfocusedContainerColor = Color(0xFF293038),[m
[32m+[m[32m                    focusedIndicatorColor = Color.Transparent,[m
[32m+[m[32m                    unfocusedIndicatorColor = Color.Transparent,[m
[32m+[m[32m                    cursorColor = Color.White,[m
[32m+[m[32m                    focusedTextColor = Color.White,[m
[32m+[m[32m                    unfocusedTextColor = Color.White[m
[32m+[m[32m                ),[m
[32m+[m[32m                leadingIcon = {[m
[32m+[m[32m                    Icon(Icons.Default.Search, contentDescription = "√çcone de busca", tint = Color(0xFF9EABBA))[m
[32m+[m[32m                },[m
[32m+[m[32m                shape = RoundedCornerShape(8.dp),[m
[32m+[m[32m                modifier = Modifier[m
[32m+[m[32m                    .fillMaxWidth()[m
[32m+[m[32m                    .padding(bottom = 12.dp)[m
[32m+[m[32m            )[m
[32m+[m
[32m+[m[32m            Spacer(modifier = Modifier.height(16.dp))[m
[32m+[m
[32m+[m[32m            // LINHA DE FILTROS[m
[32m+[m[32m            Row([m
[32m+[m[32m                modifier = Modifier.fillMaxWidth(),[m
[32m+[m[32m                horizontalArrangement = Arrangement.SpaceBetween[m
[32m+[m[32m            ) {[m
[32m+[m[32m                FiltroItem(text = "Tags")[m
[32m+[m[32m                FiltroItem(text = "Score")[m
[32m+[m[32m                FiltroItem(text = "Status")[m
[32m+[m[32m            }[m
[32m+[m
[32m+[m[32m            Spacer(modifier = Modifier.height(16.dp))[m
[32m+[m
[32m+[m[32m            // LISTA DE CLIENTES[m
[32m+[m[32m            LazyColumn([m
[32m+[m[32m                modifier = Modifier.fillMaxSize()[m
[32m+[m[32m            ) {[m
[32m+[m[32m                items(clientesFiltrados) { cliente -> // Usa a lista FILTRADA[m
[32m+[m[32m                    ClientRow(cliente = cliente)[m
[32m+[m[32m                    // Linha Divis√≥ria[m
[32m+[m[32m                    Divider(color = Color(0xFF293038), thickness = 1.dp)[m
[32m+[m[32m                }[m
[32m+[m[32m            }[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m
[32m+[m[32m}[m

[32m+[m[32m@Composable[m
[32m+[m[32mfun ClientRow(cliente: Cliente) {[m
[32m+[m[32m    // Estado para expandir/recolher o n√∫mero do cliente[m
[32m+[m[32m    var isExpanded by remember { mutableStateOf(false) }[m
[32m+[m
[32m+[m[32m    Row([m
[32m+[m[32m        modifier = Modifier[m
[32m+[m[32m            .fillMaxWidth()[m
[32m+[m[32m            .clickable { isExpanded = !isExpanded } // Torna a linha clic√°vel[m
[32m+[m[32m            .padding(vertical = 12.dp),[m
[32m+[m[32m        horizontalArrangement = Arrangement.SpaceBetween,[m
[32m+[m[32m        verticalAlignment = Alignment.CenterVertically[m
[32m+[m[32m    ) {[m
[32m+[m[32m        // LADO ESQUERDO: Foto + Nome/Ramo[m
[32m+[m[32m        Row(verticalAlignment = Alignment.CenterVertically) {[m
[32m+[m
[32m+[m[32m            // FOTO CIRCULAR (Placeholder)[m
[32m+[m[32m            Box([m
[32m+[m[32m                modifier = Modifier[m
[32m+[m[32m                    .size(40.dp)[m
[32m+[m[32m                    .clip(CircleShape)[m
[32m+[m[32m                    .background(Color(0xFF424242)),[m
[32m+[m[32m                contentAlignment = Alignment.Center[m
[32m+[m[32m            ) {}[m
[32m+[m
[32m+[m[32m            Spacer(modifier = Modifier.width(16.dp))[m
[32m+[m
[32m+[m[32m            // NOME E RAMO[m
[32m+[m[32m            Column {[m
[32m+[m[32m                Text([m
[32m+[m[32m                    text = cliente.nome,[m
[32m+[m[32m                    color = Color.White,[m
[32m+[m[32m                    fontWeight = FontWeight.Bold,[m
[32m+[m[32m                    fontSize = 16.sp[m
[32m+[m[32m                )[m
[32m+[m[32m                Text([m
[32m+[m[32m                    text = cliente.ramo,[m
[32m+[m[32m                    color = Color(0xFF9EABBA),[m
[32m+[m[32m                    fontSize = 12.sp[m
[32m+[m[32m                )[m
[32m+[m[32m            }[m
[32m+[m[32m        }[m
[32m+[m
[32m+[m[32m        // LADO DIREITO: N√∫mero (Se Expandido) + Status[m
[32m+[m[32m        Row(verticalAlignment = Alignment.CenterVertically) {[m
[32m+[m[32m            if (isExpanded) {[m
[32m+[m[32m                Text([m
[32m+[m[32m                    text = cliente.numero,[m
[32m+[m[32m                    color = Color.White,[m
[32m+[m[32m                    fontSize = 14.sp,[m
[32m+[m[32m                    fontWeight = FontWeight.SemiBold[m
[32m+[m[32m                )[m
[32m+[m[32m                Spacer(modifier = Modifier.width(8.dp))[m
[32m+[m[32m            }[m
[32m+[m
[32m+[m[32m            // √çcone de Status (Bolha Verde)[m
[32m+[m[32m            Box([m
[32m+[m[32m                modifier = Modifier[m
[32m+[m[32m                    .size(8.dp)[m
[32m+[m[32m                    .background(Color(0xFF2E7D32), shape = CircleShape) // Usamos CircleShape aqui tamb√©m[m
[32m+[m[32m            )[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m
[32m+[m[32m}[m
